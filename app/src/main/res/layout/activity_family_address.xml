<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyAddress"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/anik1">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:elevation="20dp"
        android:background="@drawable/shape1"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white_1"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/anik2"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/division_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/anik2"
                android:elevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/district_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/anik2"
                android:elevation="10dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/anik2"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/area_spinner"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/black"
                android:hint="Area"
                android:transitionName="tran2"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:background="@drawable/shape1"
                app:hintTextColor="@color/black">

                <EditText
                    android:id="@+id/address_edit_text"
                    android:layout_width="match_parent"
                    android:hint="Address"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="50dp"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:elevation="15dp"
                    android:background="@drawable/shape1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@color/white"
                        android:fontFamily="@font/oxygen_light"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Next"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:transitionName="tran4" />
                </LinearLayout>
            </LinearLayout>
         </ScrollView>
    </LinearLayout>
</LinearLayout>

