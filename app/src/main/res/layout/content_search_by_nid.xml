<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/anik1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_search_by_nid"
    android:layout_height="match_parent">
    <TextView
        android:text="content search by nid"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/shape1"
        android:layout_marginTop="2dp"

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/name_text_view"
            android:gravity="center"
            android:background="@color/anik1"
            android:textColor="@color/anik2"
            android:text="Name"
            android:fontFamily="@font/oxygen_light"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:layout_width="80dp"/>
        <LinearLayout
            android:layout_width="1dp"
            android:background="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/nid_text_view"
            android:gravity="center"
            android:background="@color/anik1"
            android:text="NID"
            android:fontFamily="@font/oxygen_light"
            android:textSize="16sp"
            android:textColor="@color/anik2"
            android:layout_height="match_parent"
            android:layout_width="120dp"/>
        <LinearLayout
            android:layout_width="1dp"
            android:background="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/contact_text_view"
            android:gravity="center"
            android:background="@color/anik1"
            android:text="Contact"
            android:fontFamily="@font/oxygen_light"
            android:textSize="16sp"
            android:textColor="@color/anik2"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@color/anik1"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content"/>
</LinearLayout>