<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerLogIn"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/shape1"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/address_text_view"
                    android:textColor="@color/black"
                    android:text="Address: "
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/full_name"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="Full Name"
                android:transitionName="tran2"
                app:hintTextColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_name_edit_text"
                    android:layout_width="match_parent"
                    android:hint="Full Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nid"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="NID"
                android:transitionName="tran2"
                app:hintTextColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nid_edit_text"
                    android:layout_width="match_parent"
                    android:hint="NID"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="Contact No"
                android:transitionName="tran2"
                app:hintTextColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact_no_edit_text"
                    android:layout_width="match_parent"
                    android:hint="Contact"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/members"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="Members in family"
                android:transitionName="tran2"
                app:hintTextColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/members_edit_text"
                    android:layout_width="match_parent"
                    android:hint="Members"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/earning_members"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="10dp"
                android:hint="Earning members"
                android:transitionName="tran2"
                app:hintTextColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/earning_members_edit_text"
                    android:layout_width="match_parent"
                    android:hint="Earning members in family"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="0dp"
                    android:text="Image:"/>
                <ImageView
                    android:id="@+id/imageinsert"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>
                <TextView
                    android:id="@+id/img"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/shape1"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        android:text="Add"
                        android:layout_gravity="end"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="22sp"
                        android:transitionName="tran4"
                        android:background="@color/black"
                        android:textColor="#fff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/shape1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/add_and_next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        android:text="Add and next"
                        android:layout_gravity="end"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="22sp"
                        android:transitionName="tran4"
                        android:background="@color/black"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>
<!-- End of material design -->


